{
	"root": true,
	"extends": ["@mozisan/eslint-config"],
	"parserOptions": {
		"project": "tsconfig.json"
	},
	"settings": {
		"import/internal-regex": "^~/"
	},
	"overrides": [
		{
			"files": ["*.tsx"],
			"extends": ["@mozisan/eslint-config/react"]
		},
		{
			"files": ["*.next.tsx"],
			"extends": ["@mozisan/eslint-config/next"]
		}
	]
}
